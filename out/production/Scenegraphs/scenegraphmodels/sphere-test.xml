	<transform>
			<set>
				<rotate>45 0 0 1</rotate>
				<scale>2 4 2</scale>
			</set>
		<object instanceof="Sphere" texture="whitebox">
				<material>
					<ambient>1 0 1</ambient>
                    <diffuse>0.5 0.5 0.5</diffuse>
                    <specular>0.5 0.5 0.5</specular>
					<shininess>10</shininess>
				</material>
		</object>
	</transform>
</scene>